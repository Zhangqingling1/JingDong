<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:id="@+id/line"
       android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="汉世刘家专卖店 >"
          android:textSize="20dp"
          android:textColor="#000000"
          android:background="#F0F2F5"
          android:gravity="center_vertical"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/linearLayout2"
       android:layout_below="@+id/line"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_marginLeft="19dp"
       android:layout_marginStart="19dp">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#000000"
          android:layout_marginTop="10dp"
          android:text="购满99元，可减5.00元，还差84.10元"/>
   </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:id="@+id/linearLayout3"
      android:layout_below="@+id/linearLayout2"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true">
     <CheckBox
         android:id="@+id/check_box"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="30dp"
         />
     <ImageView
         android:id="@+id/image_item_view"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_below="@+id/linearLayout2"
         android:layout_marginEnd="16dp"
         android:layout_marginRight="16dp"
         android:layout_toLeftOf="@+id/text_item_view"
         android:layout_toStartOf="@+id/text_item_view"
         android:background="@mipmap/ic_launcher" />

     <LinearLayout
         android:layout_width="wrap_content"
         android:orientation="vertical"
         android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_item_view"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="这是我的购物车数据XXXXXXXX"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/text_Items_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色：绿色"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/text_Item_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_Items_color"
            android:layout_alignStart="@+id/text_Items_color"
            android:layout_below="@+id/text_Items_color"
            android:layout_marginTop="12dp"
            android:text="$128.00"
            android:textColor="#ff0000" />
     </LinearLayout>
  </LinearLayout>
   </RelativeLayout>